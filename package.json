{
  "name": "luggagelink-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "LuggageLink shipment management API for Cloudflare Workers with Hono, Neon PostgreSQL, Drizzle ORM, and R2 storage",
  "main": "server.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "node scripts/seed.js",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "drizzle-orm": "^0.30.0",
    "hono": "^4.3.0"
  },
  "devDependencies": {
    "drizzle-kit": "^0.21.0",
    "wrangler": "^3.50.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0"
  },
  "keywords": [
    "cloudflare-workers",
    "hono",
    "drizzle-orm",
    "neon",
    "postgresql",
    "shipment",
    "delivery",
    "api"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
